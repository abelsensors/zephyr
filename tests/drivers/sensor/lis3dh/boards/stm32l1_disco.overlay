&i2c1 {
    clock-frequency = <I2C_BITRATE_FAST>;
    status = "okay";
    pinctrl-0 = <&i2c1_scl_pb6 &i2c1_sda_pb7>;

    lis3dh: lis2dh@18 {
        status = "okay";
        compatible = "st,lis2dh";
        label = "LIS3DH";
        reg = <0x18>;
    	irq-gpios= <&gpiob 8 GPIO_ACTIVE_HIGH>, <&gpiob 8 GPIO_ACTIVE_HIGH>;
    };
};